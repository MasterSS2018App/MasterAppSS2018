<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabPc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            app:tabIndicatorColor="@color/TabIndexer"
            app:tabSelectedTextColor="@color/colorEntryRoom">

            <android.support.design.widget.TabItem
                android:id="@+id/tabPCList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tabList" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabPcMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabMap" />

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewerPc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>